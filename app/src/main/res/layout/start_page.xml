<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/images"
        android:layout_width="300sp"
        android:layout_height="180sp"
        android:adjustViewBounds="true"
        android:background="@drawable/logo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_centerVertical="true"
        app:riv_corner_radius="20sp"
        tools:src="@drawable/s" />

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:textColor="@color/smallText"
        android:id="@+id/texts"
        android:layout_toLeftOf="@+id/images"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_centerVertical="true"
        android:text="Lorem ipsum dolor sit amet consectetur. Scelerisque facilisi ullamcorper fermentum mattis dolor sed blandit etiam. Lobortis lectus donec libero risus sapien mus. Varius semper tortor id aliquam porttitor aliquam. Tellus pharetra pellentesque ultrices amet cras pulvinar. Varius eu lobortis mauris massa leo. Proin amet adipiscing tincidunt viverra eu amet cras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>